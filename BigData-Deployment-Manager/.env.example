# Environment Configuration Template
# Copy this file to .env and fill in your values

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=netops_db
DB_USER=postgres
DB_PASSWORD=your_password_here

# 5G Core Database
CORE5G_DB_HOST=localhost
CORE5G_DB_PORT=5432
CORE5G_DB_NAME=core5g_db
CORE5G_DB_USER=postgres
CORE5G_DB_PASSWORD=your_password_here

# Spark Configuration
SPARK_MASTER=local[4]
SPARK_EXECUTOR_MEMORY=4g
SPARK_EXECUTOR_CORES=4

# Hive Configuration
HIVE_METASTORE_URI=thrift://localhost:9083
HIVE_WAREHOUSE_DIR=/user/hive/warehouse
HIVE_DATABASE=deployment_analytics

# Flask Configuration
FLASK_ENV=development
FLASK_APP=api/app.py
FLASK_HOST=0.0.0.0
FLASK_PORT=5000

# Redis (Optional)
REDIS_HOST=localhost
REDIS_PORT=6379

# Logging
LOG_LEVEL=INFO
